// wysiwyg editor styles

.wysiwyg

	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		font-family $at
		letter-spacing tracking(150)

	h1
		font-size 38px
	h2
		font-size 31px
	h3
		font-size 28px
	h4
		font-size 23px
	h5
		font-size 19px

	p
		margin-bottom 25px
		font-family $al
		font-size 18px
		font-weight 200
		line-height 1.56
		text-align left
		color rgba(20, 20, 20, 0.7)


