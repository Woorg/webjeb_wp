// .nav

.nav
	&.nav_dark
		.nav__link
			color #000000
			&:after
				background #000
		.nav__icon
			fill #000
.nav__list
	display none
	font-size 0
	@extends .transition
	+above($tablet)
		display block
.nav__item
	margin-left 2.375rem
	@extends .ib
	color #FFF
	font-family $al
	font-size 16px
	line-height 1
	text-transform uppercase
	letter-spacing tracking(100)
	&:first-child
		margin-left 0
	a
		color inherit
		text-decoration none
		@extends .underline

.nav
	&__button
		display block
		cursor pointer
		transition transform .2s ease
		+above($tablet)
			display none
		&:hover
			transform scale(.9)
	&__icon
		margin-top -3px
		display none
		width 26px
		height 26px
		fill #FFF
	&__icon_close
		display none
		width 26px
		height 26px
		fill #FFF
	&__icon_show
		display block
	&__trigger
		display none
		&:checked ~
			.nav__list
				+below($tablet)
					position absolute
					z-index 10
					top 100%
					left 0
					padding-top 25px
					padding-right 15px
					padding-bottom 25px
					padding-left 15px
					width 100vw
					min-height 100vh
					display block
					background rgba(0, 0, 0, .8)
					text-align left
					.nav__item
						margin-left 0
						border-bottom 1px solid rgba(255, 255, 255, .4)
						display block
					a
						padding-top 15px
						padding-bottom 15px
						display block
						color #FFF
				+above($tablet)
					display block


