.breadcrumbs
	margin-bottom 25px
	a,
	span
		display inline-block
		vertical-align top
		@extends .title-h4
		font-family $ar
		font-size 14px
		// text-transform uppercase
		color #212121
		line-height 1.6
		// letter-spacing tracking(60)
		text-decoration none
		&:after
			background #212121
	a
		border-bottom 1px solid lighten(#01579b, 55)
		&:hover
			border-bottom 1px solid transparent

.breadcrumbs__list
	font-size 0
.breadcrumbs__item
	margin-right 2px
	@extends .ib
	font-size 16px
