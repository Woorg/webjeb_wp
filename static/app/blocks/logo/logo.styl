.logo
	position relative
	padding-left 30px
	color #FFF
	font-family $am
	font-size 18px
	line-height 1
	letter-spacing tracking(200)
	text-transform uppercase
	text-decoration none
	opacity 1
	transition opacity .2s ease
	will-change initial
	overflow hidden
	&:hover
		opacity .9
	&__icon
		position absolute
		top 50%
		left -13px
		margin-top -13px
		width 50px
		height 34px
		fill #fff
	&.logo_dark
		color #212121
		.logo__icon
			fill #212121
