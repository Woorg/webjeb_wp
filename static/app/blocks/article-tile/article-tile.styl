.article
	margin-bottom (88px / 2)
	&__w
		position relative
		clearfix()
	&__w-w
		width 71.604938%
		float right
		transition all .1s ease
		+below(1315px)
			width auto
			float none
	&__w-w_full
		width 85%
		transition all .1s ease
	&__table-contents
		float left
		width 200px
		width 24.691358%
		+below(1315px)
			display none
		h2
			margin-bottom 20px
			padding-bottom 0
			font-family $ar
			font-size 16px
			line-height 28px
			text-transform uppercase
			letter-spacing tracking(150)
		ol
			list-style-type decimal
			font-family $ar
		li
			margin-bottom 20px
		a
			border-bottom 1px solid lighten(#01579b, 55)
			color #01579b
			font-family $al
			font-size 14px
			line-height 1.4
			transition all .2s ease
			&:hover
				border-bottom 1px solid transparent
	.sticky-wrapper
		position relative
	&__table-contents_fixed
		position fixed
		top 100px
		left 0
		bottom 200px
		padding-left 30px
		float none
		width 230px
		max-height 600px
		overflow auto
	&__link
		border-bottom 1px solid lighten(#01579b, 55)
		color #01579b
		@extends .transition
	&__title
		margin-bottom 40px
		@extends .title-h2
		color #212121
		&:hover
			.article__link
				border-bottom 1px solid transparent
		+below($tablet)
			// font-size 30px
			line-height 1.4

	&__text
		@extends .wysiwyg

	&__img
		margin-bottom 40px
		// background #efefef
		img
			max-width 100%
			height auto
	&__img_testimonials
		width 96px
		height 96px
		display inline-block
		vertical-align top
		background url('../images/general/profile-icon-1.svg') 50%  / cover no-repeat
		border-radius 50%
		img
			border-radius 50px
	&__more
		.article__more-link
			border 1px solid #212121
			display inline-block
			@extends .button_small
	&__social
		margin-bottom 33px


