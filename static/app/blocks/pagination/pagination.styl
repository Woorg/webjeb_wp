.pagination
	position relative
	margin-bottom 30px
	font-family $al
	font-size 16px
	line-height 1
	text-align center
	.page-numbers
		border-bottom 1px solid lighten(#01579b, 60)
		margin-left 30px
		display inline-block
		vertical-align top
		color #212121
		&:first-child
			margin-left 0
		&.current
			border-bottom 1px solid transparent
			font-family $ar

.post-navigation
	margin-bottom 30px
	h2
		@extends .title-h3
		@extends .visuallyhidden

	.nav-links
		@extends .title-h2
		font-size 16px
		line-height 1.4
		+below($tablet)
			font-size 16px

	a
		border-bottom 1px solid lighten(#01579b, 60)
		color #01579b
		@extends .transition
		&:hover
			border-bottom 1px solid transparent

.nav-links
	clearfix()

.nav-previous,
.nav-next
	position relative
	margin-bottom 10px
	padding-left 30px
	float left
	+below($tablet)
		float none

	&:after
		position absolute
		top 50%
		left 0
		margin-top -9px
		content "←"
		font-family $ar
		font-size 16px
		line-height 1

.nav-next
	padding-right 30px
	padding-left 0
	float right
	&:after
		right 0
		left auto
		content "→"

	+below($tablet)
		padding-right 0
		padding-left 30px
		float none
		&:after
			right auto
			left 0
