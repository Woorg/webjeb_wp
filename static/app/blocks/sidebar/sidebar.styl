.sidebar
	position relative
	margin-left ratio-percentage(30,1140)
	width ratio-percentage(300,1140)
	float left
	+below($tablet)
		width auto
		float none
	&__block
		position sticky
		top 0
		margin-bottom 30px
	&__title
		// border-bottom 1px solid lighten(#141414, 50)
		margin-bottom 20px
		font-family $ar
		font-size 16px
		line-height 28px
		text-transform uppercase
		letter-spacing tracking(150)
